<div class="container m-5">
  <div class="row">
    <div class="col-md-4">
    <h1 class="size3">登录</h1>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :邮箱, :class => "size1" %><br />
        <%= f.email_field :email, autofocus: true, :class => "form-control", :required => "required" %>
      </div>

      <div class="form-group">
        <%= f.label :密码, :class => "size1" %><br />
        <%= f.password_field :password, autocomplete: "off", :class => "form-control", :required => "required" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :记住密码 %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "登录", :class => "btn btn-primary btn-lg" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
