<div class="container m-5">
  <div class="row">
    <div class="col-md-12">
    <h1 class="size1">投稿</h1>
      <%= form_for @contribute,:html => {:multipart => true} do |a| %>
        <div class="form-group w-25">
          <label>稿件名</label>
          <%= a.text_field :videoname, :class => "form-control" , :required => "required" %>
        </div>
        <div class="form-group">
          <label>视频文件</label>
          <%= a.file_field :video, :required => "required" %>
        </div>
        <div class="form-group">
          <label>视频封面图片</label>
          <%= a.file_field :image, :required => "required" %>
        </div>
        <div class="form-group">
          <label>视频简介</label>
          <%= a.text_field :command, :class => "form-control", :required => "required" %><br>
        </div>
        <div class="form-group">
          <label>选择分类</label><br>   
          <div class="btn-group brn-group-lg" data-toggle="buttons", :required => "required" >
	          <label class="btn btn-info">
		          <%= a.radio_button(:videoclass, "douga") %>
		          <%= a.label(:videoclass_douga, "动画") %>
	          </label>
	          <label class="btn btn-info">
		          <%= a.radio_button(:videoclass, "bangumi") %>
		          <%= a.label(:videoclass_bangumi, "番剧") %>
	          </label>
	          <label class="btn btn-info">
		          <%= a.radio_button(:videoclass, "music") %>
		          <%= a.label(:videoclass_music, "音乐") %>
	          </label>
	          <label class="btn btn-info">
		          <%= a.radio_button(:videoclass, "game") %>
		          <%= a.label(:videoclass_game, "游戏") %>
	          </label>
          </div>
        </div>	
        <%= a.submit "上传", :class => "btn btn-primary btn-lg" %>
      <% end %>
    </div>
  </div>
</div>
